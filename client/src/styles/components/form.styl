@import '../variables'

.form-item
  margin 20px 0 0
  padding 7px 0
  position relative
  
  .form-error
    visibility hidden
    font-size 11px
    color dangerColor
    position absolute
    top 0

  &.error
    .form-error
      visibility visible



.form-label
  position absolute
  margin 21px 0 0
  transition: 0.3s ease all;
  top -7px
  left 0
  pointer-events: none;
  font-size 16px
  color #aaa

textarea:focus ~ .form-label
input:focus ~ .form-label
.form-item:not(.is-empty) .form-label
  top -28px
  font-size 11px
  line-height 1
  color mainColor


.form-control
  border: 0;
  background-image: linear-gradient(#9c27b0, #9c27b0), linear-gradient(#D2D2D2, #D2D2D2);
  background-size: 0 2px, 100% 1px;
  background-repeat: no-repeat;
  background-position: center bottom, center calc(100% - 1px);
  background-color: transparent;
  transition: background 0s ease-out;
  float: none;
  box-shadow: none;
  border-radius: 0;
  font-weight: 400;
  outline none
  padding 7px 0

  &:focus
    outline: none;
    background-image: linear-gradient(#9c27b0, #9c27b0), linear-gradient(#D2D2D2, #D2D2D2);
    background-size: 100% 2px, 100% 1px;
    box-shadow: none;
    transition-duration: 0.3s
    
  &.error
    outline: none;
    background-image: linear-gradient(dangerColor, dangerColor), linear-gradient(#D2D2D2, #D2D2D2);
    background-size: 100% 2px, 100% 1px;
    box-shadow: none;
    transition-duration: 0.3s

.form-buttons
  margin 10px 0
  text-align left

.radio
  margin 10px 0
  label
    font-size 14px
    padding-left 35px
    position relative
    cursor pointer

  .circle
    border: 1px solid rgba(0,0,0, .54)
    height: 15px
    width: 15px
    border-radius: 100%;
  
  .check
    height 15px
    width 15px
    border-radius 100%
    transform scale3d(0,0,0)
    
  span
    display block
    position absolute
    left 10px
    top 2px
    transition-duration 0.2s

  input[type=radio]
    opacity 0
    height 0
    width 0
    overflow hidden
  
  input[type=radio]:checked ~ .circle
    border-color mainColor
    opacity 1

  input[type=radio]:checked ~ .check
    transform scale3d(0.65, 0.65, 1);
    background-color mainColor
    opacity 1
