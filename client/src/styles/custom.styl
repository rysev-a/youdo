@import './variables'

html
  font-family "RobotoLight", sans-serif
body
  background #eee

h2
  font-size 2.6em
  font-weight 300
  line-height 1.5em
  color #3C4858

h3
  font-size 1.825em
  font-weight 300
  line-height 1.4em
  color #3C4858

.text-primary
  color mainColor

.main
  padding 20px 0 0
  background #fff
  margin 10px 30px 0
  border-radius 6px
  box-shadow 0 16px 24px 2px rgba(0, 0, 0, 0.14), 0 6px 30px 5px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2)
